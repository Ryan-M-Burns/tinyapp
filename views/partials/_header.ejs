<header>
  <nav class="navbar navbar-expand-md navbar-dark" style="background-color: #072083">
    <img src="../../public/images/favicon.ico" alt="Logo" width="50" height="50" class="d-inline-block align-text-top">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!user_ID) { %>
      
      <form class="d-flex" method="GET" action="/register">
        <button class="btn btn-success" type="submit" style="margin-left: 1em; margin-right: 1em">Register</button>
      </form>

      <form class="d-flex" method="GET" action="/login">
      <button class="btn btn-success" type="submit" style="margin-left: 1em; margin-right: 1em">Login</button>
    </form>
    <% } else { %>
      <form class="d-flex" method="POST" action="/logout">
        <a class="navbar-brand text-white">"Welcome <%= users[user_ID]["email"] %>!"</a>
        <button class="btn btn-success" type="submit" style="margin-left: 1em; margin-right: 1em">Logout</button>
      </form>
      <% } %>
  </nav>
  <style>
    #gradient {
      min-height: 100vh;
      background-color: #072083;
      background-image: linear-gradient( #072083,#f85b1a);
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
    }
  </style>
</header>